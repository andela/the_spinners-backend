{
  "name": "the_spinners-backend",
  "version": "1.0.0",
  "description": "A platform to make company global travel and accommodation easy and convenient for the strong workforce of savvy members of staff, by leveraging the modern web.",
  "main": "index.js",
  "nyc": {
    "exclude": [
      "src/database/*",
      "src/models",
      "src/helpers/eventEmmiters/emitter.js",
      "src/tests"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "babel src  --out-dir production",
    "start": "node production/server.js",
    "migrate:drop": "sequelize db:migrate:undo:all",
    "dev": "nodemon --exec babel-node src/server.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "npm run migrate:drop && npm run migrate:up && npm run seed:up",
    "test": "export NODE_ENV=test && nyc --reporter=html --reporter=text mocha  --require  @babel/register src/tests/**/*.test.js --timeout 100000 --exit",
    "migrate:up": "npx sequelize-cli db:migrate",
    "seed:up": "npx sequelize-cli db:seed:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/the_spinners-backend.git"
  },
  "author": "snipers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela/the_spinners-backend/issues"
  },
  "homepage": "https://github.com/andela/the_spinners-backend#readme",
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "coveralls": "^3.0.9",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/helper-plugin-utils": "^7.0.0",
    "@babel/node": "^7.7.4",
    "@babel/plugin-transform-regenerator": "^7.7.5",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.5",
    "@babel/register": "^7.7.4",
    "@babel/runtime": "^7.7.6",
    "@hapi/joi": "^16.1.8",
    "@hapi/joi-date": "^2.0.1",
    "@sendgrid/mail": "^6.4.0",
    "babel-plugin-istanbul": "^5.2.0",
    "bcrypt": "^3.0.7",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "find-up": "^4.1.0",
    "istanbul-lib-instrument": "^3.3.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "node-mocks-http": "^1.8.1",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "regenerator-runtime": "^0.13.3",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "sinon": "^8.0.1",
    "sinon-chai": "^3.3.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "socketio-jwt": "^4.5.0",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2",
    "test-exclude": "^5.2.3"
  }
}
