{
  "name": "the_spinners-backend",
  "version": "1.0.0",
  "description": "A platform to make company global travel and accommodation easy and convenient for the strong workforce of savvy members of staff, by leveraging the modern web.",
  "main": "index.js",
  "scripts": {
    "build": "babel src  --out-dir production",
    "start": "node production/index.js",
    "dev": "nodemon --exec babel-node src/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "pretest": "sequelize db:migrate:undo:all  && sequelize db:migrate",
    "test": "export NODE_ENV=test && nyc --reporter=html --reporter=text mocha  --require  @babel/register src/tests/*.js --timeout 100000 --exit",
    "migrate": "npx sequelize-cli db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andela/the_spinners-backend.git"
  },
  "author": "snipers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andela/the_spinners-backend/issues"
  },
  "homepage": "https://github.com/andela/the_spinners-backend#readme",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.7.6",
    "coveralls": "^3.0.9",
    "eslint": "^6.7.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^2.0.1",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.5",
    "@babel/register": "^7.7.4",
    "@babel/runtime": "^7.7.6",
    "@hapi/joi": "^16.1.8",
    "bcrypt": "^3.0.7",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.14.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.1.2"
  }
}
